<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:weightSum="6"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/aleft"
                    android:padding="20dp"
                    android:id="@+id/back3"
                    />
                <TextView
                    android:padding="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"

                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="11"
        android:background="@color/colorWhite">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:orientation="vertical"
                android:weightSum="13.5"
                android:layout_gravity="center"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Provide your old password to make sure you are authentic user."
                        android:textColor="@color/colorTextgray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Old Password "
                        android:paddingTop="10dp"
                        android:textColor="@color/colorTextgray2"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:hint="Enter old Password"
                        android:background="@drawable/edbg"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorTextgray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="New Password"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorTextgray2"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:hint="Enter New Password"
                        android:background="@drawable/edbg"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorTextgray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2.5"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Confirm New Password "
                        android:paddingTop="10dp"
                        android:textColor="@color/colorTextgray2"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:hint="ReEnter New Password"
                        android:background="@drawable/edbg"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorTextgray"/>
                </LinearLayout>






            </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            >

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"

                android:text="Update Password"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>